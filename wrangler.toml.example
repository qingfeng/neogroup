name = "neogroup"
main = "src/index.ts"
compatibility_date = "2024-01-01"
workers_dev = true

[vars]
APP_NAME = "NeoGroup"
APP_URL = "https://your-domain.com"
# MASTODON_BOT_TOKEN/DOMAIN are deprecated

[[d1_databases]]
binding = "DB"
database_name = "neogroup"
database_id = "your-database-id-here"  # 运行 wrangler d1 create neogroup 获取

[[kv_namespaces]]
binding = "KV"
id = "your-kv-namespace-id-here"  # 运行 wrangler kv namespace create KV 获取

# R2 存储（可选，用于图片上传）
# [[r2_buckets]]
# binding = "R2"
# bucket_name = "neogroup-uploads"

# 队列（可选，用于后台任务）
# [[queues.producers]]
# binding = "QUEUE"
# queue = "neogroup-tasks"

# 自定义域名（可选）
# [[routes]]
# pattern = "your-domain.com"
# custom_domain = true

[site]
bucket = "./public"
